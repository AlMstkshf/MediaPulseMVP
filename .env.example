# Media Pulse - Environment Variables Example File
# Copy this file to .env and fill in the appropriate values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/mediapulse

# Authentication & Security
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# Email Configuration
EMAIL_FROM=noreply@mediaintelligence.app

# Mailjet (Primary Email Provider)
MAILJET_API_KEY=your_mailjet_api_key
MAILJET_SECRET_KEY=your_mailjet_secret_key

# Mailgun (Secondary Email Provider)
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=mg.yourdomain.com
MAILGUN_REGION=us  # or 'eu' for European region

# AI Services (only set the ones you want to use)
USE_OPENAI=true
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# News API Service
NEWS_API_KEY=your_news_api_key

# NewsAPI.ai Service
NEWSAPI_AI_KEY=your_newsapi_ai_key

# Search Engine API Services
SERPAPI_KEY=your_serpapi_key

# AWS Configuration (for AWS Comprehend NLP services)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Google Cloud Configuration (for Cloud Natural Language API)
GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json

# Frontend Configuration
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXXXX  # Google Analytics

# Application Settings
PORT=5000
NODE_ENV=development  # production, staging, development, test

# Websocket Configuration
WS_HEARTBEAT_INTERVAL=30000  # 30 seconds in milliseconds